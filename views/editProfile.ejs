<%- include("partials/header") %>

<div class="mbody container content">
  <% if(success && success.length>0) {%>
  <div class="alert alert-success">
    <%=success%>
  </div>
  <% } %>
  <% if(error && error.length>0) {%>
  <div class="alert alert-danger">
    <%=error%>
  </div>
  <% } %>

  <form action="/profile/edit/<%=currentUser._id%>" method="POST"> 
    <div class="form-group row">
      <label for="username" class="col-4 col-form-label">Username</label> 
      <div class="col-8">
        <input id="username" name="username" value="<%=currentUser.username%>" class="form-control here" required type="text">
      </div>
    </div>
    <div class="form-group row">
      <label for="email" class="col-4 col-form-label"> Email ID </label>
      <div class="col-8">
        <input id="email" name="email" value="<%=currentUser.email%>" required class="form-control here" type="text">
      </div>
    </div>
    <div class="form-group row">
      <label for="name" class="col-4 col-form-label">First Name</label>
      <div class="col-8">
        <input id="name" name="firstName" value="<%=currentUser.firstName%>" required class="form-control here" type="text">
      </div>
    </div>
    <div class="form-group row">
      <label for="lastname" class="col-4 col-form-label"> Last Name</label>
      <div class="col-8">
        <input id="lastname" name="lastName" value="<%=currentUser.lastName%>" required class="form-control here" type="text">
      </div>
    </div>
    <div class="form-group row">
      <div class="col-12">
        <button class="btn btn-outline-success float-right">Confirm changes</button>
        <a class="btn btn-outline-danger float-left" onClick="history.back()">Cancel</a>
      </div>
    </div>
  </form>

</div>

<%- include("partials/footer") %>
